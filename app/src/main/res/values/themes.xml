<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. ActionBar, MaterialComponents 임의로 제거.-->
    <style name="Theme.MySprout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backGroundGrey</item>
        <item name="colorPrimaryVariant">@color/mintGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mintGreen</item>
        <item name="colorSecondaryVariant">@color/mintGreen</item>
        <item name="colorOnSecondary">@color/almostBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/backGroundGrey</item>
    </style>

    <style name="EditTextMainGreenStyle" parent="Widget.Design.TextInputLayout"> <!--별명, 새싹 이름 입력 부분-->
        <item name="colorControlNormal">@color/grey</item>  <!--unFocus 상태일때 밑줄 색-->
        <item name="boxStrokeColor">@color/mainGreen</item> <!--Focus 상태일때 밑줄 색-->
        <item name="colorControlActivated">@color/mainGreen</item>
        <item name="android:textCursorDrawable">@color/mainGreen</item>

        <item name="android:textColorHint">@color/grey</item>  <!--hint 색-->
        <item name="hintTextColor">@color/mainGreen</item>   <!--floating hint 색-->

        <!-- <item name="helperText"></item> xml 에서 한 속성을 여기서도 할 수 있습니다.-->
        <item name="helperTextTextColor">@color/grey</item>

        <item name="errorTextColor">@color/errorRed</item>
    </style>

    <style name="EditTextSubGreenStyle" parent="Widget.Design.TextInputLayout"> <!--이메일, 비번 입력 부분-->
        <item name="colorControlNormal">@color/grey</item>  <!--unFocus 상태일때 밑줄 색-->
        <item name="boxStrokeColor">@color/subGreen</item> <!--Focus 상태일때 밑줄 색-->
        <item name="colorControlActivated">@color/subGreen</item>
        <item name="android:textCursorDrawable">@color/subGreen</item>

        <item name="android:textColorHint">@color/grey</item>  <!--hint 색-->
        <item name="hintTextColor">@color/subGreen</item>   <!--floating hint 색-->

        <!-- <item name="helperText"></item> xml 에서 한 속성을 여기서도 할 수 있습니다.-->
        <item name="helperTextTextColor">@color/grey</item>

        <item name="errorTextColor">@color/errorRed</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColorPrimary">@color/almostBlack</item>
    </style>

    <!--bottomsheetdialog animation-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TextBold" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/nbold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextRegular" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/nregular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    
