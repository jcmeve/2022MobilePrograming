<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundrec_white"
    tools:context=".fragment.DialogMovementAmount">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/TextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16sp"
        android:textColor="@color/almostBlack"
        android:text="하루 평균 이동량(km)을 설정해주세요." />

    <NumberPicker
        android:id="@+id/numberpicker_movement_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:theme="@style/NumberPickerStyle"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <Button
            style="@style/TextBold"
            android:id="@+id/amountdialogbtn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="취소"
            android:textSize="16sp"
            android:textColor="@color/mainGreen" />

        <Button
            style="@style/TextBold"
            android:id="@+id/amountdialogbtn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="확인"
            android:textSize="16sp"
            android:textColor="@color/mainGreen"/>
    </LinearLayout>

</LinearLayout>